def remove_after_kth(items,k=1):
    i=0
    finalitems=[]
    while i<len(items):
        if finalitems.count(items[i])<k:
            finalitems.append(items[i])
            i+=1
        else:
            i+=1
    return finalitems


remove_after_kth(['tom', 42, 'bob', 'bob', 99, 'bob', 'tom', 'tom', 99],0)

